<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/day_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="@dimen/activity_horizontal_quoter_margin"
        android:paddingBottom="@dimen/activity_horizontal_quoter_margin">

        <ImageView
            android:id="@+id/day_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/day_list_day_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/day_memo"
            android:layout_toRightOf="@+id/day_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_quoter_margin"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorSubImage" />

</LinearLayout>