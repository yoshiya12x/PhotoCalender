<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_stamp_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_quoter_margin">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="スタンプを選んでOKを押してね"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stamp_image_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_quoter_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onStampClick"
            android:src="@drawable/sparrow2" />

        <ImageView
            android:id="@+id/stamp_image_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_quoter_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onStampClick"
            android:src="@drawable/sparrow2" />

        <ImageView
            android:id="@+id/stamp_image_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_quoter_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onStampClick"
            android:src="@drawable/sparrow2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stamp_image_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_quoter_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onStampClick"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/stamp_image_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_quoter_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onStampClick"
            android:src="@drawable/sparrow2" />

        <ImageView
            android:id="@+id/stamp_image_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_quoter_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onStampClick"
            android:src="@drawable/sparrow2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stamp_image_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_quoter_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onStampClick"
            android:src="@drawable/sparrow2" />

        <ImageView
            android:id="@+id/stamp_image_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_quoter_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onStampClick"
            android:src="@drawable/sparrow2" />

        <ImageView
            android:id="@+id/stamp_image_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_quoter_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onStampClick"
            android:src="@drawable/sparrow2" />

    </LinearLayout>

</LinearLayout>